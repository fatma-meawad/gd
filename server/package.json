{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start-db": "docker-compose -f utils/db/docker-compose.yml up -d",
    "stop-db": "docker-compose  -f utils/db/docker-compose.yml  down -v",
    "start": "cross-env NODE_ENV=production npm run start-db &&  node index | pino-pretty",
    "dev": "cross-env NODE_ENV=development  nodemon | pino-pretty",
    "test:accounts": "cross-env NODE_ENV=test && npm run start-db &&  jest -- components/accounts --verbose --runInBand  && npm run stop-db",
    "test": "cross-env NODE_ENV=test && npm run start-db &&  jest --verbose --runInBand | pino-pretty >reports/logs.json && npm run stop-db",
    "test:watch": "cross-env NODE_ENV=test jest --verbose --runInBand --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write ."
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "reporters": [
      "default",
      [
        "jest-html-reporter",
        {
          "outputPath": "./reports/test-report.html",
          "includeConsoleLog": true,
          "includeFailureMsg": true
        }
      ]
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "apilint": "^0.6.0",
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^8.2.0",
    "dotenv-flow": "^4.1.0",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-async-handler": "^1.2.0",
    "express-openapi-validator": "^5.3.8",
    "fs-extra": "^11.2.0",
    "helmet": "^4.4.1",
    "http-status-codes": "^2.3.0",
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "newman": "^6.2.1",
    "openapi-snippet": "^0.14.0",
    "pg": "^8.8.0",
    "pino": "^6.11.3",
    "pino-http": "^10.3.0",
    "pino-pretty": "^4.8.0",
    "speccy": "^0.1.2",
    "swagger-parser": "^10.0.3",
    "swagger-ui-express": "^4.6.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "cross-env": "^7.0.3",
    "dependency-cruiser": "^16.5.0",
    "eslint": "^8.57.1",
    "eslint-plugin-airbnb": "^0.0.1-security",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-complexity": "^1.0.2",
    "eslint-plugin-jsdoc": "^50.4.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^2.0.4",
    "eslint-plugin-unicorn": "^56.0.0",
    "husky": "^9.1.6",
    "install": "^0.13.0",
    "nodemon": "^2.0.22",
    "npm": "^10.9.0",
    "pino": "^6.11.3",
    "pino-pretty": "^4.8.0",
    "prettier": "^2.8.1",
    "supertest": "^6.3.3"
  }
}
